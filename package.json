{
  "name": "react-lines-ellipsis-observer",
  "version": "0.15.3",
  "description": "Simple multiline ellipsis component for React.JS (With Observer)",
  "main": "lib/index.js",
  "module": "lib/index.modern.mjs",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "standard",
    "lint:fix": "standard --fix",
    "prebuild": "mkdirp lib",
    "prepare": "npm run build",
    "build": "microbundle -f modern,cjs --no-compress --no-sourcemap --jsx React.createElement src/*.{js,jsx}",
    "dev:docs": "snowpack dev",
    "build:docs": "snowpack build"
  },
  "keywords": [
    "react",
    "react-component",
    "multiline",
    "ellipsis",
    "dotdotdot",
    "clamp",
    "read-more"
  ],
  "author": "xiaody/ramirezcgn",
  "license": "MIT",
  "repository": "ramirezcgn/react-lines-ellipsis",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-react-jsx": "^7.17.12",
    "@babel/preset-env": "^7.18.2",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "core-js": "^3.23.0",
    "enzyme": "^3.11.0",
    "lodash": "^4.17.11",
    "microbundle": "^0.15.0",
    "mkdirp": "^0.5.5",
    "raf": "^3.4.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "snowpack": "^3.8.8",
    "standard": "^16.0.4"
  },
  "standard": {
    "globals": [
      "ResizeObserver"
    ],
    "ignore": [
      "lib",
      "docs"
    ]
  }
}
